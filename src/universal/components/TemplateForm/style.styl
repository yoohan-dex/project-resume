.container
  ul
    list-style none
    text-align center
    text-indent 0
    -webkit-padding-start 0
    li
      cursor pointer
      transition all 1s
      background-size 100%
      background-position center
      outline rgba(0,0,0,0) solid 0px
      div
        width 100%
        height 100%
        padding 30px
        transition all 0.2s
        
        p
          display inline-block
          font-size 20px
          color #525A6F
          transition all 0.2s
        
        &:hover
          background rgba(0, 0, 0, 0.4)
        &:hover p
          transform scale(0.8)
          color white
        
      &:hover
        outline lighten(#CE5C60, 2) solid 2px