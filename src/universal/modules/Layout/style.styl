

.main

  position fixed
  bottom 0
  overflow scroll
  top 0
  right 0
  width 100%
  background #525A6F
  transition width 1s cubic-bezier(0.18, 0.96, 0.19, 1.11)
  & p
    width 80%
    margin auto
.main-to-right
  width 80%

.resume-page
  width 100%
  height 1000px
  background #525A6F
  box-shadow 0 0 black 100px 100px



.box-container
  padding 30px 0
  width 100%
  height 1000px
  perspective 800px

.resume-box
  margin auto
  background white
  box-shadow 0 1px 2px 3px rgba(0, 0, 0, 0.3)
  border-radius 4px
  min-height 900px
  transition width 0.5s cubic-bezier(0.18, 0.96, 0.19, 1.11), transform 0.5s cubic-bezier(0.18, 0.96, 0.19, 1.11)



